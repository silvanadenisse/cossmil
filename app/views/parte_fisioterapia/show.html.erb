  <thead>
  <tr>
    <th>Matricula asegurado</th>
    <th>Matricula beneficiario</th>
    <th>Sexo</th>
    <th>Edad</th>
    <th>Tipo de asegurado</th>
    <th>Fuerza</th>
    <th>Numero de sesiones</th>
    <th>Medico</th>
    <th>Diagnostico</th>
    <th>Procedencia</th>
    <th>Tipo de consulta</th>
    <th>Responsable</th>
  </tr>
  </thead>
  <tbody>
  <% @parte_fisioterapium.paciente_reporte_fisioterapia.each do |paciente_reporte_fisioterapia| %>
      <tr>
        <td>
          <%= paciente_reporte_fisioterapia.paciente.matricula_titular %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.paciente.matricula_paciente %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.paciente.sexo %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.edad %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.tipo_asegurado %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.paciente.fuerza %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.num_sesion %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.medico %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.diagnostico %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.procedencia %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.tipo_consulta %>
        </td>
        <td>
          <%= paciente_reporte_fisioterapia.responsable %>
        </td>
      </tr>
  <% end %>
