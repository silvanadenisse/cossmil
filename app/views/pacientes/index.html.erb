<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Matricula titular</th>
      <th>Fuerza</th>
      <th>Matricula paciente</th>
      <th>Carnet</th>
      <th>Grupo sanguineo</th>
      <th>Nacionalidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombre %></td>
        <td><%= paciente.apellido %></td>
        <td><%= paciente.matricula_titular %></td>
        <td><%= paciente.fuerza %></td>
        <td><%= paciente.matricula_paciente %></td>
        <td><%= paciente.carnet %></td>
        <td><%= paciente.grupo_sanguineo %></td>
        <td><%= paciente.nacionalidad %></td>
        <td><%= link_to 'Mostrar', paciente %></td>
        <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Eliminar', paciente, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

