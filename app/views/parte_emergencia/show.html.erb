<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre medico:</strong>
  <%= @parte_diario.user.name + " " + @parte_diario.user.last_name %>
</p>

<p>
  <strong>Mes:</strong>
  <%= @parte_emergencium.mes %>
</p>

<p>
  <strong>Enfermera:</strong>
  <%= @parte_emergencium.enfermera %>
</p>

<p>
<h2>Pacientes del Parte Diario</h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Carnet del asegurado</th>
    <th>Carnet del beneficiario</th>
    <th>Nombre y apellidos</th>
    <th>Fuerza</th>
    <th>Grado</th>
    <th>Edad</th>
    <th>Sexo</th>
    <th>Signos vitales</th>
    <th>Diagnostico</th>
    <th>Tratamiento</th>
  </tr>
  </thead>
  <tbody>
  <% @parte_diario.paciente_reportes.each do |paciente_repo| %>
      <tr>
      	<td>
          <%= paciente_repo.paciente.matricula_titular %>
        </td>
        <td>
          <%= paciente_repo.paciente.matricula_paciente %>
        </td>
        <td>
          <%= paciente_repo.paciente.nombre + " " + paciente_repo.paciente.apellido %>
        </td>
        <td>
          <%= paciente_repo.fuerza %>
        </td>
        <td>
          <%= paciente_repo.grado %>
        </td>
        <td>
          <%= paciente_repo.edad %>
        </td>
        <td>
          <%= paciente_repo.sexo %>
        </td>
        <td>
          <%= paciente_repo.Signos vitales %>
        </td>
        <td>
          <%= paciente_repo.diagnostico %>
        </td>
        <td>
          <%= paciente_repo.tratamiento %>
        </td>
        
      </tr>
  <% end %>
  </tbody>
</table>
</p>

<p>
<h2>Agregar Paciente a Parte Diario</h2>

<div id="paciente"><!--style="display:none"--><br>
  <br><form method="GET">Nombre:
    <input type="text" name="name"> &nbsp;&nbsp;&nbsp;<input type="submit" value="Buscar Paciente" , class="btn btn-info">
    <button><%= link_to 'Nuevo Paciente', new_paciente_path %></button>
  </form></br>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Carnet</th>
    </tr>
    </thead>
    <tbody>
    <% @pacientes.each do |paciente| %>
        <tr>
          <td>
            <%= paciente.nombre + " " + paciente.apellido %>
          </td>
          <td>
            <%= paciente.carnet %>
          </td>
          <td>
            <div align="right">
              <button class="btn btn-default" data-toggle="modal" data-target="#myModal-<%= paciente.id %>">Agregar a
                parte
              </button>
            </div>
            <div class="modal fade" id="myModal-<%= paciente.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Agregar a Parte</h4>
                  </div>
                  <div class="modal-body">
                    <%= form_for([@parte_diario, @parte_diario.paciente_reportes.build]) do |f| %>
                        <%= f.label 'Diagnostico: ' %>
                        <%= f.text_field :diagnostico %>
                        <%= f.label 'Tratamiento: ' %>
                        <%= f.text_field :tratamiento %>
                        <%= f.label 'Edad: ' %>
                        <%= f.number_field :edad %>
                        <%= f.label 'Fuerza: ' %>
                        <%= f.text_field :fuerza %>
                        <%= f.label 'Grado: ' %>
                        <%= f.text_field :grado %>
                        <%= f.label 'Sexo: ' %>
                        <%= f.radio_button :sexo, 'Masculino', :checked => (:sexo == 'Masculino') %> Masculino
                        <%= f.radio_button :sexo, 'Femenino', :checked => (:sexo == 'Femenino') %> Femenino
                        <%= f.label 'Signos vitales: ' %>
                        <%= f.text_field :signos_vitales %>
                        <br><%= f.submit "Agregar", class: "btn btn-default" %></br>
                    <% end %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Volver</button>
                  </div>
                </div>
              </div>
            </div>x
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>

</p>



